            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Der ‘Echter Dunkelmodus’ erreicht jetzt eine neue Stufe der Dunkelheit. Die Knöpfe werden nun auch zusätzlich abgedunkelt, wenn dieser Modus aktiviert ist.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Erweiterte Wurzelberechnungsfunktionen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Mit der neuesten Version können Berechnungen innerhalb einer Wurzel durchgeführt werden. Diese Verbesserung bietet erweiterte Funktionalität und verbessert die Benutzererfahrung bei der Durchführung komplexer mathematischer Operationen.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesBugsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Behobene Fehler"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Negative Exponenten:"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Der Fehler, der bei der Berechnung mit negativen Exponenten auftrat (übermäßige Anzahl an Nachkommastellen), wurde behoben.\n"
            android:textColor="#000000"
            android:textSize="12sp" />


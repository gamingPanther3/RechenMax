<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/patchnotesUI"
    android:background="@color/colorBTNBackgroundAccent"
    tools:context="com.mlprograms.rechenmax.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/releaseNotesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="RechenMax 1.5.8"
                android:textColor="@color/colorBTNForegroundAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/releaseNotesReleaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/release_date"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/releaseNotesOverviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/übersicht"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/releaseNotesOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nIn dieser Version des RechenMax stehen neue Funktionen zur Verfügung, um mathematische Berechnungen zu optimieren. Automatisches Scrollen ermöglicht einfaches Navigieren durch umfangreiche Berechnungen. Bei Bedarf erfolgt im oberen Berechnungsbereich automatische Bildlaufbewegung nach unten. Rundungsgenauigkeit wurde von der zehnten auf die elfte Nachkommastelle erhöht, für präzisere Dezimalzahlen. Aufrufen vorheriger Berechnungen ermöglicht einfaches Wiederherstellen und Überprüfen früherer Aufgaben durch Klick auf die entsprechende Aufgabe im Verlauf. Für trigonometrische Aufgaben bietet der RechenMax erweiterte Funktionen zur Berechnung von Sinus, Cosinus und Tangens im Grad- und Bogenmaß. Inverse trigonometrische Funktionen wie Sinus^-1 (sin⁻¹), Cosinus^-1 (cos⁻¹) und Tangens^-1 (tan⁻¹) stehen nun ebenfalls zur Verfügung, wobei bestimmte Einschränkungen im Definitionsbereich zu beachten sind. Möglichkeit zum manuellen Eingeben von Notationen verleiht zusätzliche Flexibilität. Durch einfache Schritte können komplexe Ausdrücke erstellt und berechnet werden. RechenMax unterstützt nun Verwendung der mathematischen Konstanten PI (π) für präzise Kreisberechnungen. Mit Unterstützung von Gradmaß und Bogenmaß kann flexibel zwischen den beiden Maßeinheiten gewechselt werden, je nach Anforderungen mathematischer Konzepte. Diese Version behebt auch wichtige Fehler, darunter Probleme mit Anzeige von Berechnungsbereichen, Optimierung der Faktoriellenberechnung, korrekte Umwandlung von wissenschaftlichen Notationen und verbesserte Ergebnisformatierung für präzisere Anzeige.\n"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/releaseNotesFeaturesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/neue_funktionen"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="\nAutomatisches Scrollen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Falls erforderlich, erfolgt im oberen Berechnungsbereich eine automatische Bildlaufbewegung nach unten.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="\Erhöhung der Rundungsgenauigkeit"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Die Rundungsgenauigkeit der Dezimalzahl wurde von der zehnten auf die elfte Nachkommastelle erhöht.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Aufrufen vorheriger Berechnungen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Langes Drücken: Durch langes Drücken auf einen Eintrag im Verlauf wird die zugehörige Rechnung automatisch in die Zwischenablage kopiert. Kurzes Drücken: Ein kurzer Tastendruck auf einen Verlaufeintrag fügt die entsprechende Rechnung direkt in den Taschenrechner ein.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinus, Cosinus und Tangens"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/releaseNotesFutureFeatures6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Diese neue Funktion bietet eine erweiterte Funktionalität im Bereich trigonometrischer Funktionen. Man kann jetzt Sinus, Cosinus und Tangens im Gradmaß sowie auch im Bogenmaß problemlos berechnen.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inverse trigonometrische Funktionen"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/releaseNotesFutureFeatures10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Darüber hinaus können Sie nun auch die inversen trigonometrischen Funktionen Sinus^-1 (sin⁻¹), Cosinus^-1 (cos⁻¹) und Tangens^-1 (tan⁻¹) verwenden. Bitte beachten Sie, dass diese Funktionen bestimmte Einschränkungen haben und nur für Werte im gültigen Definitionsbereich definiert sind.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Manuelles eingeben von Notationen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Für zusätzliche Flexibilität erlaubt die App nun das manuelle Eingeben von Notationen. Folgen Sie einfach diesen Schritten: Geben Sie eine beliebige Zahl ein, drücken Sie die 'e±' Taste (für '×10'), wählen Sie Plus ('+') oder Minus ('-') für einen positiven oder negativen Exponenten. Geben Sie anschließend Ihren Exponenten nach dem Plus oder Minus ein, und die Zahl wird automatisch umgerechnet.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Die Kreiszahl PI (π)"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Der RechenMax unterstützt jetzt die Verwendung von PI (π), einer mathematischen Konstanten, die das Verhältnis des Umfangs eines Kreises zu seinem Durchmesser repräsentiert.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Gradmaß und Bogenmaß"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Gradmaß und Bogenmaß werden nun unterstützt, wodurch flexibles Wechseln zwischen den beiden Maßeinheiten möglich ist. Das Gradmaß findet typischerweise Anwendung in geometrischen und trigonometrischen Berechnungen, während das Bogenmaß in fortgeschritteneren mathematischen Konzepten relevant ist.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Automatische Vervollständigung von Klammern"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Jetzt werden fehlende Klammern automatisch erkannt und automatisch ergänzt, was die Eingabe von Ausdrücken weiter vereinfacht.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Verbesserte Klammernbehandlung"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Die Handhabung von Klammern wurde optimiert, um eine fehlerfreie Verarbeitung von mathematischen oder logischen Ausdrücken zu gewährleisten.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesBugsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/behobene_fehler"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="\nAnzeigen der Berechnungsbereiche"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es konnte vorkommen, dass die Berechnungsbereiche unter bestimmten Umständen nicht oder nur teilweise angezeigt wurden.\n"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Berechnen der Fakultät"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Die Faktoriellenberechnung wurde optimiert, um sicherzustellen, dass der Taschenrechner nicht durch extrem große Zahlen abstürzt.\n"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Umwandeln der Notationen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unter bestimmten Umständen wurden wissenschaftliche Notationen nicht korrekt umgewandelt. Dieses Problem wurde behoben, um eine zuverlässigere Funktionalität zu gewährleisten.\n"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Verbesserte Ergebnisformatierung"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Das Problem mit der fehlerhaften Ergebnisformatierung wurde behoben, um eine präzisere und konsistentere Anzeige zu gewährleisten.\n"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/releaseNotesAPIVersionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Systemanforderung"/>

        <TextView
            android:id="@+id/releaseNotesAPIVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="\nMinimale Android-Version: 10\nEmpfohlene Android-Version: 13 oder höher\nMaximale Android-Version: 14\n"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:checked="false"
                android:text="Diesen Text nicht mehr anzeigen"/>

            <Button
                android:id="@+id/okay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verstanden"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
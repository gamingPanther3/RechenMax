            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="\Erhöhung der Rundungsgenauigkeit"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Die Rundungsgenauigkeit der Dezimalzahl wurde von der zehnten auf die elfte Nachkommastelle erhöht.\n"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/releaseNotesFutureFeaturesSubtitle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Aufrufen vorheriger Berechnungen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"

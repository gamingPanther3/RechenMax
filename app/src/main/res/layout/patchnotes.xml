            android:text="\nAutomatisches Scrollen"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/releaseNotesFutureFeatures1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"

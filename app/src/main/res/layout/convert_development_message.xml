<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/convertDevelopmentMessageLayout">

    <LinearLayout
        android:id="@+id/confirmOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border_thick"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/convert_understood_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/convertMessage"
            android:textColor="@color/colorBTNForegroundAccent"
            android:layout_margin="20dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convertUnderstoodButton"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/understood"
                android:textColor="@color/colorBTNForegroundAccent"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/confirm_delete_layout">

    <LinearLayout
        android:id="@+id/confirmOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border_thick"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/confirm_delete_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/historyConfirmTitle"
            android:textColor="@color/colorBTNForegroundAccent"
            android:textSize="25sp"
            android:layout_margin="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deleteConfirmButton"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/textview_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/historyConfirmDeleteText"
                android:textColor="@color/colorBTNForegroundAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cancelConfirmButton"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="2.5dp"
                android:background="@drawable/textview_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/historyConfirmCancelText"
                android:textColor="@color/colorBTNForegroundAccent"
                android:textSize="16sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

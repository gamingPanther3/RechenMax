<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/historyUI"
    tools:context="com.mlprograms.rechenmax.MainActivity" >

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBackground"
        android:orientation="horizontal">

        <Button
            android:id="@+id/history_return_button"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="10dp"
            android:foreground="@drawable/arrow_back_light"
            android:tag="return"
            android:textSize="@dimen/calcButtonTextSize"
            android:tooltipText="@string/back"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/history_title"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/history"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:tooltipText="Zwischenablage einfügen" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/history_delete_button"
            android:tag="delete"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginEnd="10dp"

            android:foreground="@drawable/trash_light"
            android:textSize="@dimen/calcButtonTextSize"
            android:tooltipText="@string/delete"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/history_scroll_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/history_scroll_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <!-- TextView's added by HistoryActivity.java
            <TextView
                android:id="@+id/history_empty_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historyIsEmpty"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:gravity="center_vertical|center_horizontal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_line_height"
                    android:layout_marginStart="@dimen/history_line_margin_horizontal"
                    android:layout_marginEnd="@dimen/history_line_margin_horizontal"
                    android:background="@color/history_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginTop="10sp"
                        android:gravity="start"
                        android:text="09. März 2024"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <Button
                        android:layout_width="15dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginHorizontal="15sp"
                        android:foreground="@drawable/extendbutton_light" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="10sp"
                        android:paddingEnd="30dp"
                        android:layout_marginBottom="10sp"
                        android:gravity="end"
                        android:text="25 * (2 + 3.6 * 9!) / 2 = 16.329.625"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/history_result_size" />
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="10sp"
                    android:gravity="start"
                    android:text="Notiz:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10sp"
                        android:hint="Klicke, um eine Beschreibung hinzuzufügen"
                        android:backgroundTint="@android:color/transparent"
                        android:textStyle="italic"
                        android:gravity="start"
                        android:textColor="@color/black" />
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_line_height"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:background="@color/history_line_color" />
            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>